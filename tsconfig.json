{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "target": "esnext",
        "outDir": "./dist",
        "baseUrl": "./src",
        "newLine": "LF",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "paths": {
        "@/*": [
          "src/*"
        ]
      },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
